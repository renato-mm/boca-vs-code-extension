{
  "name": "boca",
  "displayName": "BOCA",
  "description": "",
  "version": "0.0.1",
  "license": "GNU General Public License v3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/renato-mm/boca-vs-code-extension"
  },
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "boca-file-explorer",
          "title": "BOCA",
          "icon": "media/mortar-board.svg"
        }
      ]
    },
    "colors": [
      {
        "id": "runs.correctAnswer",
        "description": "Color for a correct run",
        "defaults": {
          "dark": "terminal.ansiBrightGreen",
          "light": "terminal.ansiGreen"
        }
      },
      {
        "id": "runs.incorrectAnswer",
        "description": "Color for a incorrect run",
        "defaults": {
          "dark": "terminal.ansiBrightRed",
          "light": "terminal.ansiRed"
        }
      },
      {
        "id": "problems.blue",
        "description": "Color for blue balloon problem",
        "defaults": {
          "dark": "#A8E7F0",
          "light": "#A8E7F0"
        }
      },
      {
        "id": "problems.orange",
        "description": "Color for orange balloon problem",
        "defaults": {
          "dark": "#F4D199",
          "light": "#F4D199"
        }
      },
      {
        "id": "problems.green",
        "description": "Color for green balloon problem",
        "defaults": {
          "dark": "#C6EC87",
          "light": "#C6EC87"
        }
      },
      {
        "id": "problems.red",
        "description": "Color for red balloon problem",
        "defaults": {
          "dark": "#FE7269",
          "light": "#FE7269"
        }
      },
      {
        "id": "problems.pink",
        "description": "Color for pink balloon problem",
        "defaults": {
          "dark": "#FEBAE7",
          "light": "#FEBAE7"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/ftp": "^0.3.33",
    "@types/glob": "^8.0.0",
    "@types/mkdirp": "^0.5.2",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/rimraf": "^2.0.2",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "ftp": "^0.3.10",
    "jsonc-parser": "^0.4.2",
    "minimist": "^1.2.6",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.6.2"
  }
}
