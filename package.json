{
  "name": "boca",
  "displayName": "BOCA",
  "description": "",
  "version": "0.0.1",
  "license": "GNU General Public License v3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/renato-mm/boca-vs-code-extension"
  },
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:contests"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "boca-file-explorer",
          "title": "BOCA",
          "icon": "media/mortar-board.svg"
        }
      ]
    },
    "views": {
      "boca-file-explorer": [
        {
          "id": "contests",
          "name": "Contests",
          "icon": "media/mortar-board.svg",
          "contextualTitle": "BOCA"
        },
        {
          "id": "problems",
          "name": "Problems",
          "icon": "media/mortar-board.svg",
          "contextualTitle": "BOCA"
        }
      ]
    },
    "commands": [
      {
        "command": "contests.fetchContests",
        "title": "Fetch Contests",
        "icon": {
          "light": "resources/light/sync.svg",
          "dark": "resources/dark/sync.svg"
        }
      },
      {
        "command": "contests.refreshEntry",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "contests.addEntry",
        "title": "Add"
      },
      {
        "command": "contests.editEntry",
        "title": "Edit",
        "icon": {
          "light": "resources/light/edit.svg",
          "dark": "resources/dark/edit.svg"
        }
      },
      {
        "command": "contests.deleteEntry",
        "title": "Delete"
      },
      {
        "command": "contests.selectContest",
        "title": "Select Contest"
      },
      {
        "command": "problems.selectProblem",
        "title": "Select Problem"
      },
      {
        "command": "problems.downloadProblem",
        "title": "Download Problem To Workspace",
        "icon": {
          "light": "resources/light/desktop-download.svg",
          "dark": "resources/dark/desktop-download.svg"
        }
      }
    ],
    "menus": {
      "view/context": [
        {
          "command": "contests.refreshEntry",
          "when": "view == contests"
        },
        {
          "command": "contests.addEntry",
          "when": "view == contests"
        }
      ],
      "view/title": [
        {
          "command": "contests.refreshEntry",
          "when": "view == contests",
          "group": "navigation"
        },
        {
          "command": "contests.addEntry",
          "when": "view == contests"
        }
      ],
      "view/item/context": [
        {
          "command": "contests.editEntry",
          "when": "view == contests && viewItem == contest",
          "group": "inline"
        },
        {
          "command": "contests.deleteEntry",
          "when": "view == contests && viewItem == contest"
        },
        {
          "command": "problems.downloadProblem",
          "when": "view == problems && viewItem == problem",
          "group": "inline"
        },
        {
          "command": "problems.downloadProblem",
          "when": "view == problems && viewItem == problem"
        }
      ]
    },
    "colors": [
      {
        "id": "runs.correctAnswer",
        "description": "Color for a correct run",
        "defaults": {
          "dark": "terminal.ansiBrightGreen",
          "light": "terminal.ansiGreen"
        }
      },
      {
        "id": "runs.incorrectAnswer",
        "description": "Color for a incorrect run",
        "defaults": {
          "dark": "terminal.ansiBrightRed",
          "light": "terminal.ansiRed"
        }
      },
      {
        "id": "problems.blue",
        "description": "Color for blue balloon problem",
        "defaults": {
          "dark": "#A8E7F0",
          "light": "#A8E7F0"
        }
      },
      {
        "id": "problems.orange",
        "description": "Color for orange balloon problem",
        "defaults": {
          "dark": "#F4D199",
          "light": "#F4D199"
        }
      },
      {
        "id": "problems.green",
        "description": "Color for green balloon problem",
        "defaults": {
          "dark": "#C6EC87",
          "light": "#C6EC87"
        }
      },
      {
        "id": "problems.red",
        "description": "Color for red balloon problem",
        "defaults": {
          "dark": "#FE7269",
          "light": "#FE7269"
        }
      },
      {
        "id": "problems.pink",
        "description": "Color for pink balloon problem",
        "defaults": {
          "dark": "#FEBAE7",
          "light": "#FEBAE7"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/extract-zip": "^2.0.1",
    "@types/ftp": "^0.3.33",
    "@types/glob": "^8.0.0",
    "@types/mkdirp": "^0.5.2",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/rimraf": "^2.0.2",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "axios": "^1.2.1",
    "extract-zip": "^2.0.1",
    "ftp": "^0.3.10",
    "jsonc-parser": "^0.4.2",
    "minimist": "^1.2.6",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.6.2"
  }
}
